//백준 11055
#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;
int main()
{
    int n;
    int a[1001];
    int dp[1001];
    
    cin >> n;
    fill(dp, dp+ n, 1);
    
    for (int i = 0; i < n; i++){
      cin >> a[i];
        dp[i]=a[i];}
    
    
    for (int i = 1; i < n; i++)
    {
        for (int j = 0; j<i; j++)
        {
            if (a[j] < a[i]){
                dp[i]=max(dp[i], dp[j]+a[i]);//!!!! 빠르게 움직이는 j에 다다다다 sum에서 더해줘서 나온 dp갱신된 dp를 뛰어넘지 못하면 그냥 그 상태로 머문다. !!!!
                }
            }
            
        }
    cout << *max_element(dp,dp+n)<<endl;
}
