//백준 1654 랜선자르기 
#include<iostream>
using namespace std;
int K, N, ans; 
int arr[10001]; 
int  maxi = 0;
long long mid, high, low;
//n이 목표개수 
int main(){
	cin >> K >> N;
	for (int i = 0; i < K; i++){
		cin >> arr[i];
		if (maxi < arr[i]) maxi = arr[i];}
	low = 1; //0으로는 나눌 수 없다. 
	high = maxi;
	ans = 0;

	while (low <= high){
		mid = (low + high) / 2;
		int cnt = 0;
		for (int i = 0; i < K; i++)
			{cnt += arr[i] / mid;}

		if (cnt >= N) {
			low = mid + 1; //없으면 시간초과 
			if (ans < mid) ans = mid;
		}
		else {// (cnt < N)
			high = mid - 1;}}
	cout << ans;
}
