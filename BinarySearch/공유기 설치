//백준 2110 공유기 설치 
#include <iostream>
#include <algorithm>
using namespace std;
const int MAX = 200000;
int N, C; int arr[MAX];

bool possible(int dist){
        int cnt = 1;
        int prev = arr[0];
        //조건 충족하는지 확인
        for(int i=1; i<N; i++)
                 if (arr[i] - prev >= dist){ //prev를 arr[0]으로 대체하면 왜 안돼? 
                         cnt++; prev = arr[i];}
        //조건 충족
        if (cnt >= C) return true;
        return false;}

int main(void){
        ios_base::sync_with_stdio(0);cin.tie(0);
        cin >> N >> C;
        for (int i = 0; i < N; i++)
                 cin >> arr[i];
        sort(arr, arr + N);
        //최소거리, 최대 거리
        int low = 1, high = arr[N - 1] - arr[0];
        int result = 0;
        while (low <= high){
                 int mid = (low + high) / 2;
                 if (possible(mid)) {
                         result = max(result, mid);
                         low = mid + 1;}
                 else    high = mid - 1;}
        cout << result << "\n";
        return 0;}
