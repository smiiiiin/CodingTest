//백준 1697 숨바꼭질 
#include<iostream>
#include<queue>
#include<vector>

using namespace std;

#define MAX 100001

int n, k;
bool visited[MAX];

int bfs(int n, int k) {
	queue<pair <int, int>> q;
	q.push(make_pair(n, 0));
	visited[n] = 1;

	while (!q.empty()) {
		int posi = q.front().first;
		int time = q.front().second;
		q.pop();

		if (posi == k)	return time;

		if (posi + 1 < MAX && !visited[posi + 1]) {
			q.push(make_pair(posi + 1, time + 1));
			visited[posi + 1] = true;
		}
		if (posi - 1 >= 0 && !visited[posi - 1]) {
			q.push(make_pair(posi - 1, time + 1));
			visited[posi - 1] = true;
		}
		if (posi * 2 < MAX && !visited[posi * 2]) {
			q.push(make_pair(posi * 2, time + 1));
			visited[posi * 2] = true;
		}
	}
	return 0;
}

int main() {
	cin >> n >> k;
	
	cout << bfs(n, k) << endl;
	return 0;
}

//내가
// 백준 1697 숨바꼭질
#include <iostream>
#include <algorithm> //min
#include <queue>
#include <vector>
#define MAX 1000001
using namespace std;

bool visited[MAX]  = { 0 };
vector<int> v;
int res{0x3f3f3f};

void bfs(int node, int sec) {
    queue<int> q;
    q.push(node);
    visited[node]=1;
        
    while(!q.empty()){
        int cx= q.front(); q.pop();
        
        int nx[3]= {-1,1,node};
        for(int d=0;d<3;d++){
            if(nx> MAX || nx<0) continue;
            int nx= cx+dx[d]; 
            if(!visited[nx]) {q.push(nx); sec++; visited[nx]=1;}}
        res= min(res,sec);
    }
}

int main() {
	cin.tie(NULL); cout.tie(NULL); ios::sync_with_stdio(false); cin >> n;
    int s,f;
    cin>>s>>f;
	bfs(s,0);
	cout << res<<"\n";
	return 0;
}
