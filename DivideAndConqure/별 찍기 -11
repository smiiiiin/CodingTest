// 백준 2448 별 찍기 -11
// !!중요: 보통 DevideAndConqure 분할정복문제는 N이 3의 거듭제곱인 경우가 많다. 
#include <iostream>
#include <memory.h> //memset 
char space[3072][6144];		//  k값이 최대 10까지인 것을 고려

void dfs(int N, int x, int y) {
	if (N == 3) {
		space[y][x] = '*';
		space[y + 1][x - 1] = '*';
		space[y + 1][x + 1] = '*';
		space[y + 2][x - 2] = '*';
		space[y + 2][x - 1] = '*';
		space[y + 2][x] = '*';
		space[y + 2][x + 1] = '*';
		space[y + 2][x + 2] = '*';
		return;
	}		// 별 한세트
	
	dfs(N / 2, x, y);		// 벌의 윗부분을 
	dfs(N / 2,x - (N / 2), y + (N / 2));	// 별의 좌하단 삼각형
	dfs(N / 2, x + (N / 2), y + (N / 2));	// 별의 우하단 삼각형
}

int main() {
	int N; int i, j; scanf("%d", &N);
	memset(space, ' ', sizeof(space));		

	dfs(N, N - 1, 0);		

	for (i = 0; i < N; i++) {
		for (j = 0; j < N * 2; j++) printf("%c", space[i][j]);
		printf("\n");}}
