// 백준 11729 하노이탑 이동 순서
#include <iostream>
using namespace std;
void dfs(int n, int start, int end, int pass){
    if(n == 1) printf("%d %d\n", start, end);
    else{
        dfs(n-1,start,pass,end);
        printf("%d %d\n",start,end);
        dfs(n-1,pass,end,start);}}
        
int main() {
    int n; cin >> n;
    cout << (1<<n) -1 << "\n"; //2의 num승 -1
    dfs(n,1,3,2);}
