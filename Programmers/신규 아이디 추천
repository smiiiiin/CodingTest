//프로그래머스 신규 아이디 추천
#include <string>
#include <vector>
using namespace std;

string solution(string id) {

    // 1) 대문자-> 소문자
    for(int i = 0; i < id.length(); i++)
        if (id[i] >= 'A' && id[i] <= 'Z') //대문자면
            id[i] = tolower(id[i]);
    
    // 2) 소문자, 숫자, -,_,. 이 아니면 삭제
    for(int i = 0; i < id.length(); ) {
        if ((id[i] >= 'a' && id[i] <= 'z') || (id[i] >= '0' && id[i] <= '9')
              || id[i] == '-' || id[i] == '_' || id[i] == '.'){
            i++; continue;} //continue를 함으로써 아래 코드를 실행하지 않는다 (조건합당 시, i++로 커서만 넘기고 지우진 않는다 )
        id.erase(id.begin() + i);}
    
    // 3) .이 2번 이상이면 지운다
    for(int i = 1; i < id.length(); ){
        if (id[i] == '.' && id[i - 1] == '.'){
            id.erase(id.begin() + i);}
        else i++;}
    
    // 4) .이 처음이나 끝에 있으면 지운다
    if (id.front() == '.') id.erase(id.begin());
    if (id.back() == '.') id.erase(id.end() - 1);
    
    // 5) 빈문자열이면 'a'로 한다
    if (id.length() == 0) id = "a";
    
    // 6) 첫문자 15개까지만 저장 이후론 자른다 근데 끝에 .이면 지운다
    if (id.length() >= 16){
        while(id.length() != 15){ //15개면 그만 하는데
            id.erase(id.begin() + 15); //그 전까지 16번째 자리에 문자 지운다
        }}
    if (id.back() == '.') id.erase(id.end() - 1);
    
    // 7) 길이가 2이하면 끝에것 길이 3될때까지 붙인다
    if (id.length() <= 2){
        while(id.length() != 3){
            id += id.back();}}
    return id;}
